@model Employees.Models.AddEmployeeViewModel

<form method="post" action="Add">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label class="form-label">Email Address</label>
        <input type="email" class="form-control" asp-for="EmailAddress">
    </div>
    <div class="mb-3">
        <label class="form-label">Salary</label>
        <input type="number" class="form-control" asp-for="Salary">
    </div>
    <div class="mb-3">
        <label class="form-label">Designation</label>
        <input type="text" class="form-control" asp-for="Designation">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
